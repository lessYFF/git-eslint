{
    "name": "git-eslint",
    "version": "1.0.8",
    "author": "Bruce yan",
    "license": "MIT",
    "description": "git pre-commit for verifying commit-msg and eslint, then prettier",
    "main": "index.js",
    "scripts": {
        "start": "node src/index",
        "test": "mocha test/fs.test"
    },
    "bin": {
        "git-lints-init": "./src/index.js"
    },
    "keywords": [
        "pre-commit",
        "commit-lint",
        "eslint",
        "prettier"
    ],
    "devDependencies": {
        "chai": "^4.2.0",
        "mocha": "^5.2.0"
    },
    "dependencies": {
        "@commitlint/cli": "^7.3.1",
        "@commitlint/config-conventional": "^7.3.1",
        "commitizen": "^3.0.5",
        "conventional-changelog": "^3.0.5",
        "conventional-changelog-cli": "^2.0.11",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.12.0",
        "eslint-config-prettier": "^3.4.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3"
    },
    "lint-staged": {
        "*.{js,json,ts,css,md,vue,react}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
