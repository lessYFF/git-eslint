{
    "compilerOptions": {
        "pretty": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "newLine": "lf",
        "outDir": "./lib/",
        "lib": ["dom", "es2017"]
    },
    "exclude": ["coverage", "./dist/", "./__test__/", "./node_modules/"],
    "compileOnSave": true
}
